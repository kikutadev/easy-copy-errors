{
  "name": "easy-copy-errors",
  "publisher": "kikuta",
  "displayName": "easy-copy-errors",
  "description": "Easily copy error message",
  "version": "0.0.1",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "esbuild": "^0.25.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
    "contributes": {
    "commands": [
        {
            "command": "easy-copy-errors.copyErrors",
            "title": "Copy All Errors in Current File"
        }
    ],
    "keybindings": [
        {
            "command": "easy-copy-errors.copyErrors",
            "key": "ctrl+shift+e",
            "mac": "cmd+shift+e",
            "when": "editorTextFocus"
        }
    ]
  },
  "configuration": {
    "title": "Easy Copy Errors",
    "properties": {
        "easyCopyErrors.includeFileName": {
            "type": "boolean",
            "default": true,
            "description": "Include the file name in the copied error message"
        },
        "easyCopyErrors.format": {
            "type": "string",
            "default": "[${severity}] Line ${line}, Column ${column}: ${message}",
            "description": "Format of the copied error message. Available placeholders: ${severity}, ${line}, ${column}, ${message}, ${file}"
        }
    }
}
}
